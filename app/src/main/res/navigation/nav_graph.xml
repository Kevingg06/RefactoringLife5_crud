<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.ui.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/nav_add" />
        <action
            android:id="@+id/action_homeFragment_to_updateFragment"
            app:destination="@id/nav_update" />
        <action
            android:id="@+id/action_homeFragment_to_deleteFragment"
            app:destination="@id/nav_delete" />
        <action
            android:id="@+id/action_nav_home_to_nav_add"
            app:destination="@id/nav_add" />
    </fragment>

    <fragment
        android:id="@id/nav_add"
        android:name="com.example.myapplication.ui.ui.add.AddFragment"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_nav_add_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_add_to_nav_delete"
            app:destination="@id/nav_delete" />
        <action
            android:id="@+id/action_nav_add_to_nav_update"
            app:destination="@id/nav_update" />
    </fragment>

    <fragment
        android:id="@id/nav_update"
        android:name="com.example.myapplication.ui.ui.update.UpdateFragment"
        tools:layout="@layout/fragment_update">
        <argument
            android:name="productId"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_update_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_update_to_nav_add"
            app:destination="@id/nav_add" />
        <action
            android:id="@+id/action_nav_update_to_nav_delete"
            app:destination="@id/nav_delete" />
    </fragment>

    <fragment
        android:id="@id/nav_delete"
        android:name="com.example.myapplication.ui.ui.delete.DeleteFragment"
        tools:layout="@layout/fragment_delete">
        <argument
            android:name="productId"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_delete_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_delete_to_nav_add"
            app:destination="@id/nav_add" />
        <action
            android:id="@+id/action_nav_delete_to_nav_update"
            app:destination="@id/nav_update" />
    </fragment>

</navigation>